{
  "name": "plank",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && npx svelte-check-rs --tsconfig ./tsconfig.json | biome check --write .",
    "check:watch": "svelte-kit sync && npx svelte-check-rs --tsconfig ./tsconfig.json --watch | biome check --write . --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@sveltejs/adapter-node": "^5.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "better-auth": "^1.0.0",
    "better-sqlite3": "^12.0.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-svelte": "^0.562.0",
    "node-cron": "^4.2.1",
    "parse-torrent": "^11.0.0",
    "parse-torrent-title": "^2.1.0",
    "tailwind-merge": "^3.4.0",
    "webtorrent": "^2.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/better-sqlite3": "^7.0.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@vitest/coverage-v8": "4.0.17",
    "drizzle-kit": "^0.31.8",
    "lefthook": "^2.0.15",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "ultracite": "^7.0.12",
    "vite": "^6.0.0",
    "vitest": "^4.0.17"
  }
}
