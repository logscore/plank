{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "!**/node_modules",
      "!**/.svelte-kit",
      "!**/build",
      "!**/dist",
      "!**/*.min.js",
      "!**/*.min.mjs"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "useTemplate": "warn",
        "noUnusedTemplateLiteral": "warn",
        "useImportType": "warn"
      },
      "suspicious": {
        "recommended": true,
        "useAwait": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true
    },
    "globals": ["Buffer", "AbortSignal", "fetch", "parseTorrent"]
  },
  "overrides": [
    {
      "includes": ["**/*.svelte"],
      "formatter": {
        "indentStyle": "space"
      },
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          },
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      }
    },
    {
      "includes": ["src/app.d.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNamespace": "off"
          }
        }
      }
    },
    {
      "includes": ["scripts/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["src/tests/**/*.ts", "**/*.test.ts"],
      "linter": {
        "rules": {
          "performance": {
            "noNamespaceImport": "off",
            "useTopLevelRegex": "off"
          },
          "correctness": {
            "noConstructorReturn": "off",
            "noUnusedVariables": "off"
          },
          "complexity": {
            "noBannedTypes": "off"
          },
          "suspicious": {
            "noEmptyBlockStatements": "off"
          }
        }
      }
    },
    {
      "includes": ["src/types/**/*.d.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ],
  "extends": ["ultracite/biome/core", "ultracite/biome/svelte"],
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
